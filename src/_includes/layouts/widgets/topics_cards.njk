<div class="container-xxl py-6">
    <div class="container">
        <div class="mx-auto text-center wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
            
            <h2 class="mb-5">Our research topics</h2>
        </div>
        <div class="row g-4">
            {% for t in collections.topics %}
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                
                <div class="card service-item rounded h-100">
                    <div class="d-flex justify-content-between">
                        <div class="figure">
                            <img src="{{ t.data.illustration | url }}"></img>
                        </div>
                        
                    </div>
                    <div class="p-3">
                        <h5 class="mb-3"> {{ t.data.title }} </h5>
                        <span> {{ t.data.description }} </span>
                        <a href="{{ t.url }}">Learn more ...</a>
                    </div>
                    
                </div>
            </div> 
            {% endfor %}
        </div>
    </div>
</div>
        <!-- Research End -->