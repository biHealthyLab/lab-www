{% extends "layouts/base.njk" %}

{% block page_header %}
<section class="topic">
    <div class="container hero">
        <div class="col-md-8 mx-auto text-center">
            <h2>{{ title }}</h2>
        </div>
        <div class="container col-lg-6 col-md-6 mx-auto figure-caption text-center">
            {# {{ short_description | safe }} #}
            {% for subT in subThemes %}
                {{subT}}
                {% if not loop.last %}
                &#x2022
                {% endif %}

            {% endfor %}

        </div>

    </div>
</section>
{% endblock %}


{% block page_main_content %}                    

<div class="container-xxl wow fadeInUp" data-wow-delay="0.1s">
   
    {# <h2 class="mb-4">{{ title }}</h2> #}

    

    
    <div class="col-md-10 mx-auto mt-4 mb-4">
        <div class="row">
            <div class="col-md-8">

                <div class="figure" data-wow-delay="0.1s">
                    <img class="img-fluid" src="{{ illustration | url }}">
                </div>


            {{ content | latex | safe }}
            </div>
            <div class="col-md-4">
                {% include "layouts/news/widgets/latest_news.njk" %}
            </div>
        </div>
    </div>
    
  {# {% endif %} #}
  {# {% endfor %} #}
</div>


{% endblock %}