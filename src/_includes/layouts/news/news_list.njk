{% extends "layouts/generic_page.njk" %}




{% block page_content_left %}
    <div class="col-md-10 mx-auto ml-2">
        
        {% for n in collections.news | reverse %}
        {# <div class="list-group-item list-group-item-action flex-column align-items-start"> #}
            <a class="list-group-item list-group-item-action flex-column align-items-start" data-bs-toggle="collapse" role="button" href="#news-{{ n.data.title|slugify }}" aria-expanded="false" aria-controls="news-{{ n.data.title|slugify }}">
                <small class="text-muted"> {{ n.data.news_date|readableDate}} </small> <br>
                <b>{{ n.data.title |safe }}</b>
                
            </a> 
        {# </div> #}

        <div class="collapse" id="news-{{ n.data.title|slugify }}">
            <div class="card-body">
                {{ n.templateContent|safe }}
            </div>
        </div>     
        {% endfor %}
        
        
    </div>
{% endblock %}
            

