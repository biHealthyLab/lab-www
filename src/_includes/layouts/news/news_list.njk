{% extends "layouts/base.njk" %}

{% block page_header %}
{% include "layouts/page_header.njk" %}
{% endblock %}


{% block page_main_content %}
<div class="container-xxl">
    <div class="col-md-10 mx-auto ml-2">
        
        {% for n in collections.news | reverse %}
        {# <div class="list-group-item list-group-item-action flex-column align-items-start"> #}
            <a class="bcard list-group-item list-group-item-action flex-column align-items-start" data-bs-toggle="collapse" role="button" href="#news-{{ n.data.title|slugify }}" aria-expanded="false" aria-controls="news-{{ n.data.title|slugify }}">
                <small class="text-muted"> {{ n.data.news_date|readableDate}} </small> <br>
                <b>{{ n.data.title |safe }}</b>
                <br>

                <div class="text-center arrow">
                    <i class="fa fa-chevron-down"></i>
                </div>
                
            </a> 
        {# </div> #}

        <div class="collapse" id="news-{{ n.data.title|slugify }}">
            <div class="card-body">
                {{ n.templateContent|safe }}
            </div>
        </div>     
        {% endfor %}
        
        
    </div>
</div>
{% endblock %}
            

