{% extends "layouts/base.njk" %}

{% block page_header %}
{% include "layouts/page_header.njk" %}
{% endblock %}


{% block page_main_content %}
<div class="container-xxl">
    <div class="col-md-10 mx-auto ml-2">
        {# <div class="hero-odd"> #}
            <h1 class="mb-5 headline"><span>Lecture notes and slides</span></h1>

            {% for note in notes %}
            <div class="card-body bcard clickable wow fadeInUp" data-wow-delay="0.1s">
                <span>
                    <b>{{loop.index}} - </b>
                </span>
                <span>
                    <i>{{note.title}}</i>.
                </span>
                <span>
                    By <b>{{note.author}}</b>
               
                </span>
                <span>
                    <a href="/media/files/{{note.filename}}" target="_blank">(View pdf)</a>
                </span>
                <span>
                    {{note.date}}. 
                </span>
                {% if p.doi %}
                <span>
                    <a href="https://doi.org/{{p.doi}}">doi:{{note.doi}}</a>
                <span>
                {% endif %}
            </div>
            {% endfor %}
        {# </div>     #}
    </div>
</div>
{% endblock %}